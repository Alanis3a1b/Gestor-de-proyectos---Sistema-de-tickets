@{
    ViewBag.Title = "Trabajar Ticket";
    var ticket = ViewData["Ticket"] as dynamic;
}

<div class="container mt-5">
    <div class="card mb-3">
        <div class="card-header" style="background-color: #800080; color: white;">
            TICKET TRABAJADO # @ticket.id_ticket
