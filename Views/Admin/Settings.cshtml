@{
    Layout = "_Layout";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<div class="container mt-5">
    <div class="row">
        <!-- Card Ajustes -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-white" style="background-color: #6f42c1;">
                    AJUSTES
                </div>
                <div class="card-body" style="background-color: #f8f9fa;">
                    <div class="mb-3">
                        <strong>Cambiar datos de perfil</strong>
                    </div>
                    <hr>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="profilePicture" class="form-label">Foto de perfil:</label>
                            <input type="file" class="form-control" id="profilePicture">
                        </div>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <strong>Cambiar contraseña</strong>
                    </div>
                    <form id="changePasswordForm" action="/Cliente/CambiarContrasena" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="currentPassword" class="form-label">Contraseña actual:</label>
                                <input type="password" class="form-control" id="currentPassword" name="currentPassword">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="newPassword" class="form-label">Nueva contraseña:</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword">
                            </div>
                            <div class="col-md-6">
                                <label for="confirmNewPassword" class="form-label">Confirmar nueva contraseña:</label>
                                <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword">
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary rounded-pill" style="background-color: #0d6efd; border-color: #0d6efd; color: #ffffff;">GUARDAR CAMBIOS</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Card Perfil de Cliente -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-white" style="background-color: #6f42c1;">
                    PERFIL DE CLIENTE
                </div>
                <div class="card-body text-center" style="background-color: #f8f9fa;">
                    <div class="mb-3">
                        <img src="#" alt="Imagen de perfil" class="rounded-circle" style="width: 150px; height: 150px;">
                    </div>
                    <div class="mb-3">
                        <strong>Nombre:</strong>
                        <p id="clientName">@ViewBag.NombreUsuario</p>
                    </div>
                    <div class="mb-3">
                        <strong>Correo:</strong>
                        <p id="clientEmail">@ViewBag.CorreoUsuario</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
